{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "sourceMap": false,
    "target": "es5",
    "module": "commonjs",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "allowJs": false,
    "noUnusedLocals": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "preserveConstEnums": true,
    "noImplicitThis": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "jsx": "react",
    "lib": ["esnext", "dom.iterable", "dom"],
    "paths": {
      "@src/*": ["./src/*"],
      "type": ["./type.d.ts"],
      "client": ["./src/type.d.ts"]
    },
    "rootDir": "."
  },
  "exclude": ["dist"]
}
